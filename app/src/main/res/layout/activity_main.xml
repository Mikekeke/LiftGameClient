<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:orientation="vertical"
    tools:context="smartlift.ibesk.ru.smartliftclient.MainActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/header_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/question_header" />

        <TextView
            android:id="@+id/onlineTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/header_img"
            android:layout_alignLeft="@id/header_img"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/header_img"
            android:layout_alignTop="@id/header_img"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:shadowColor="@color/ona_air_shadow"
            android:shadowRadius="1"
            android:gravity="end"
            android:text="OFFLINE"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!--Fragment container-->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/header">
    </FrameLayout>

    <smartlift.ibesk.ru.smartliftclient.views.ListenableImage
        android:id="@+id/overlay_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/header"
        android:layout_alignTop="@id/header"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="@dimen/header_height"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:visibility="invisible"
        android:background="@color/image_bg"
        android:padding="2dp"
        />

    <!--Timer panel-->
    <LinearLayout
        android:id="@+id/timer_panel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:visibility="visible">

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:indeterminate="false"
            android:minHeight="30dip"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:progressDrawable="@drawable/progress" />
    </LinearLayout>
</RelativeLayout>
