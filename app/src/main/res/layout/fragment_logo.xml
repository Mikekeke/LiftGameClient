<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    <!--FOOTER-->
    <RelativeLayout
        android:id="@+id/logo_footer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/footer_image"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/logo_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_above="@id/logo_footer">
        <ImageView
            android:id="@+id/logo_body_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/big_body"/>
        <TextView
            android:id="@+id/txt_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="ЛОГОТИП"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:layout_alignBottom="@id/logo_body_image"
            android:layout_alignLeft="@id/logo_body_image"
            android:layout_alignRight="@id/logo_body_image"
            android:layout_alignTop="@id/logo_body_image"/>

        <TextView
            android:id="@+id/endgame_text"
            android:layout_marginTop="20dp"
            android:layout_above="@id/txt_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="\u263B ! ВРЕМЯ ВЫШЛО ! \u263B"
            android:textStyle="bold"
            android:textSize="90sp"
            android:textColor="@color/colorLost"
            android:visibility="gone"/>

    </RelativeLayout>



</RelativeLayout>
